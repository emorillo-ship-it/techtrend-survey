    <script>
        const progress = document.getElementById('progress');
        const progressText = document.getElementById('progress-text');

        function updateProgress(val, text) {
            progress.style.width = val + '%';
            progressText.innerText = text;
        }

        function navigate(currentId) {
            // Logic for Section 1 (Branching)
            if (currentId === 'section-1') {
                const shopped = document.querySelector('input[name="shoppedBefore"]:checked');
                if (!shopped) {
                    alert('Please select whether you have shopped with us before.');
                    return;
                }
                hideAll();
                if (shopped.value === 'yes') {
                    show('section-2');
                    updateProgress(40, '40%');
                } else {
                    show('section-3');
                    updateProgress(60, '60%');
                }
            } 
            
            // Logic for Section 2 (Conditional Friction)
            else if (currentId === 'section-2') {
                const friction = document.querySelector('input[name="friction"]:checked');
                hideAll();
                if (friction && friction.value === 'yes') {
                    show('section-friction');
                    updateProgress(70, '70%');
                } else {
                    show('section-4');
                    updateProgress(85, '85%');
                }
            }

            else if (currentId === 'section-friction' || currentId === 'section-3') {
                hideAll();
                show('section-4');
                updateProgress(85, '85%');
            }
        }

        function goBack(targetId) {
            hideAll();
            show(targetId);
            updateProgress(20, '20%');
        }

        function submitSurvey() {
            hideAll();
            show('thanks');
            updateProgress(100, 'COMPLETED');
        }

        function hideAll() {
            document.querySelectorAll('section').forEach(s => s.classList.add('hidden'));
        }

        function show(id) {
            document.getElementById(id).classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
